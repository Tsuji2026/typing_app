<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionChangeActivity">

    <TextView
        android:id="@+id/add_explanation_text"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginStart="160dp"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:text="@string/str_add_explanation_text"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/add_text"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginStart="160dp"
        android:layout_marginTop="140dp"
        android:background="@color/color_input_text"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="180dp"
        android:layout_marginTop="220dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/str_add_button_name"
        android:textSize="20sp"
        android:onClick="click_add_csv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/del_explanation_text"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginStart="160dp"
        android:layout_marginTop="300dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:text="@string/str_del_explanation_text"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/del_text_id"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginStart="160dp"
        android:layout_marginTop="380dp"
        android:background="@color/color_input_text"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/del_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="180dp"
        android:layout_marginTop="460dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/str_del_button_name"
        android:textSize="20sp"
        android:onClick="click_delete_csv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/change_answer"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginStart="160dp"
        android:layout_marginTop="540dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/go_home_button"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="160dp"
        android:layout_marginTop="620dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/str_go_home_button_name"
        android:textSize="20sp"
        android:onClick="click_go_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ListView
        android:id="@+id/userListView"
        android:layout_width="150dp"
        android:layout_height="800dp"
        tools:ignore="MissingConstraints" />
<!--
        android:background="@drawable/test"
-->
</androidx.constraintlayout.widget.ConstraintLayout>